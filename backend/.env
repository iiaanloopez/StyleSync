# backend/.env

# Configuración del Servidor
PORT=5000
NODE_ENV=development # development | production | test

# Configuración de MongoDB
MONGO_URI=mongodb+srv://<tu_usuario>:<tu_contraseña>@cluster0.abcde.mongodb.net/barberbooking?retryWrites=true&w=majority

# Configuración JWT
JWT_SECRET=tu_secreto_jwt_muy_largo_y_complejo_mas_de_256_bits
JWT_EXPIRES_IN=1h # 1h, 7d, 30m, etc.

# Configuración de Email (ej. para Nodemailer con SendGrid/Mailgun)
EMAIL_HOST=smtp.sendgrid.net
EMAIL_PORT=587
EMAIL_USER=apikey
EMAIL_PASS=SG.XXXXXXXXXXXXXXXXXXXXXXXXXXXXXXX # Tu API Key de SendGrid
EMAIL_FROM=no-reply@tudominio.com

# Configuración de Stripe (para pagos)
STRIPE_SECRET_KEY=sk_test_XXXXXXXXXXXXXXXXXXXXXXXX
STRIPE_PUBLISHABLE_KEY=pk_test_YYYYYYYYYYYYYYYYYYYYY
STRIPE_WEBHOOK_SECRET=whsec_ZZZZZZZZZZZZZZZZZZZZZZZZ

# Configuración de Almacenamiento Local (nombre de la carpeta)
UPLOAD_DIR=uploads

# Configuración de Cloudinary (si decides usarlo, si no, puedes omitirlo o comentarlo)
# CLOUDINARY_CLOUD_NAME=tu_cloud_name
# CLOUDINARY_API_KEY=tu_api_key_cloudinary
# CLOUDINARY_API_SECRET=tu_api_secret_cloudinary